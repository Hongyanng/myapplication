<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/wo_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:background="#04A1D1"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/touxiang"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:src="@drawable/touxiang"
                    app:riv_oval="true"
                    android:layout_height="100dp">

                </com.makeramen.roundedimageview.RoundedImageView>


                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/touxiang"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/signature"
                    android:layout_below="@+id/nickname"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:background="@drawable/wo_bg"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:padding="5dp"
                    android:id="@+id/gender_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="性别"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/gender"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:padding="5dp"
                    android:id="@+id/height_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="身高"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/height"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weight_layout"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="体重"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cupcapacity_layout"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="杯容量"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/cupcapacity"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_margin="10dp"
                android:background="@drawable/wo_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:text="  我的打卡"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/achievement"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/assignment_layout"
                android:layout_margin="10dp"
                android:background="@drawable/wo_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:text="  每日目标"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/assignment_txt"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/water_info_layout"
                android:layout_margin="10dp"
                android:background="@drawable/wo_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:text="  含水量表"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/arrow_right">

                </ImageView>

            </RelativeLayout>



            <RelativeLayout
                android:layout_margin="10dp"
                android:background="@drawable/wo_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:text="  关于我们"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/arrow_right">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lose_layout"
                android:layout_margin="10dp"
                android:background="@drawable/wo_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:text="  修改密码"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:layout_width="15dp"
                    android:src="@mipmap/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="15dp">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="10dp"
                android:background="@drawable/wo_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:text="  当前版本"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/exit_layout"
                android:layout_margin="10dp"
                android:background="@drawable/wo_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:text="  退出登录"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:layout_width="15dp"
                    android:src="@mipmap/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="15dp">

                </ImageView>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>